<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar"></style>

    <style name="Theme.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Toolbar 副标题的字体和颜色-->
    <style name="Theme.Toolbar.SubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--    Toolbar 右上角菜单风格-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:textSize">14sp</item>
        <item name="android:radius">20dp</item>
        <item name="overlapAnchor">true</item>  <!--把该属性改为 false 即可使 menu 位置位于 toolbar 之下-->
    </style>
</resources>
